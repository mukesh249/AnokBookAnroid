<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Registration">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:transitionName="logo_trans"
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:src="@drawable/logo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>
            <RelativeLayout
                android:id="@+id/totake_tv"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/to_start_but_tv"
                    android:text="@string/regis"
                    android:background="@color/yellow"
                    android:paddingStart="@dimen/text_tv_pading"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_toEndOf="@id/to_start_but_tv"
                    android:text="@string/tration"
                    android:paddingEnd="@dimen/text_tv_pading"
                    android:paddingStart="0dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:padding="@dimen/_20sdp"
                android:id="@+id/btns"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_below="@+id/totake_tv"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:focusableInTouchMode="true"
                    android:background="@drawable/white_border_round"
                    android:id="@+id/reg_user_rel"
                    android:padding="5dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/reg_user_icon"
                        android:layout_margin="5dp"
                        android:src="@drawable/user"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="@dimen/icon_size_w"
                        android:layout_height="@dimen/icon_size_h" />
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:id="@+id/reg_name_et"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:padding="@dimen/text_tv_pading"
                        android:layout_toEndOf="@id/reg_user_icon"
                        android:hint="@string/name"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:transitionName="mobile_trans"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/white_border_round"
                    android:id="@+id/reg_mobile_rel"
                    android:padding="5dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/reg_mobile_icon"
                        android:layout_margin="5dp"
                        android:src="@drawable/number"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="@dimen/icon_size_w"
                        android:layout_height="@dimen/icon_size_h" />
                    <EditText
                        android:maxLength="10"
                        android:inputType="number"
                        android:layout_centerVertical="true"
                        android:id="@+id/reg_mobile_et"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:padding="@dimen/text_tv_pading"
                        android:layout_toEndOf="@id/reg_mobile_icon"
                        android:hint="@string/mobile_number"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/white_border_round"
                    android:id="@+id/reg_email_rel"
                    android:padding="5dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/reg_email_icon"
                        android:layout_margin="5dp"
                        android:src="@drawable/email"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="@dimen/icon_size_w"
                        android:layout_height="@dimen/icon_size_h" />
                    <EditText
                        android:inputType="textEmailAddress"
                        android:layout_centerVertical="true"
                        android:id="@+id/reg_email_et"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:padding="@dimen/text_tv_pading"
                        android:layout_toEndOf="@id/reg_email_icon"
                        android:hint="@string/email_address"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:transitionName="pass_trans"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/white_border_round"
                    android:id="@+id/reg_password_rel"
                    android:padding="5dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/reg_password_icon"
                        android:layout_margin="5dp"
                        android:src="@drawable/password"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="@dimen/icon_size_w"
                        android:layout_height="@dimen/icon_size_h" />
                    <EditText
                        android:inputType="textPassword"
                        android:layout_centerVertical="true"
                        android:id="@+id/reg_password_et"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:padding="@dimen/text_tv_pading"
                        android:layout_toEndOf="@id/reg_password_icon"
                        android:hint="@string/password"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/white_border_round"
                    android:id="@+id/reg_con_password_rel"
                    android:padding="5dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/reg_con_password_icon"
                        android:layout_margin="5dp"
                        android:src="@drawable/password"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="@dimen/icon_size_w"
                        android:layout_height="@dimen/icon_size_h" />
                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/reg_con_password_et"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:padding="@dimen/text_tv_pading"
                        android:layout_toEndOf="@id/reg_con_password_icon"
                        android:hint="@string/confirm_password"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/btns"
                android:paddingTop="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/btm"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:transitionName="Create_trans"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/already_tv"
                    android:layout_below="@+id/reg_btn"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="@dimen/text_tv_pading"
                    android:text="@string/already_member_login"
                    android:textSize="@dimen/text_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:transitionName="btn_trans"
                    android:textAllCaps="false"
                    android:background="@drawable/login_now_btn"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/reg_btn"
                    android:textColor="@color/white"
                    android:text="@string/create_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>



</ScrollView>