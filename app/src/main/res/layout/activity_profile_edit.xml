<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.ProfileEdit">

    <android.support.v7.widget.Toolbar
        android:elevation="@dimen/_5sdp"
        android:background="@color/white"
        android:id="@+id/profile_edit_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/pe_pic_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gray_border_round"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                    <com.joooonho.SelectableRoundedImageView
                        android:id="@+id/edit_profile_pic"
                        android:layout_margin="2dp"
                        app:sriv_left_top_corner_radius="@dimen/_6sdp"
                        app:sriv_right_top_corner_radius="@dimen/_6sdp"
                        app:sriv_left_bottom_corner_radius="@dimen/_6sdp"
                        app:sriv_right_bottom_corner_radius="@dimen/_6sdp"
                        android:tint="@color/dark_gray"
                        android:src="@drawable/ic_person"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/edit_profile_pic_icon"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/round_conner_gray"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginBottom="55dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/primaryDark" />
            </RelativeLayout>

            <RelativeLayout
                android:focusableInTouchMode="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_pic_lin"
                android:id="@+id/pe_name_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_name_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/name"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_name_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_name_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_name_rel"
                android:id="@+id/pe_mobile_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_mobile_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/mobile_number"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_mobile_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:visibility="invisible"
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_mobile_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="2dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_mobile_rel"
                android:id="@+id/pe_email_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_email_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/email_address"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_email_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_email_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_email_rel"
                android:id="@+id/pe_location_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_location_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/location"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_location_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_location_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_location_rel"
                android:id="@+id/pe_street_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_street_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/street"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_street_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_street_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/pe_street_rel"
                android:id="@+id/pe_landmark_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/pe_landmark_img"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/landmark"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/pe_landmark_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/pe_landmark_img"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <Button

                android:text="@string/submit"
                android:id="@+id/submit"
                android:textAllCaps="false"
                android:background="@drawable/btn_yellow"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_below="@+id/pe_landmark_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>