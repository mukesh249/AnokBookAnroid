<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/_3sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/cost_estimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/selling_price_inr"
                android:gravity="end"
                android:textColor="@color/black"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/_13sdp"
                android:id="@+id/cost_estimation_price"
                android:text=" 200/-"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Service Tax: "
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/_13sdp"
                android:id="@+id/service_tax_tv"
                android:text="50"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="----------------------------------------------------------"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Total : "
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/_13sdp"
                android:id="@+id/total_tv"
                android:text=" 50"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <Button
            android:id="@+id/request_for_book_tv"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAllCaps="false"
            android:text="@string/request_for_a_book"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/round_conner_blue"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp" />
    </LinearLayout>

</android.support.v7.widget.CardView>