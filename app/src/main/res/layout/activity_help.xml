<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.ProfileEdit">

    <android.support.v7.widget.Toolbar
        android:background="@color/white"
        android:elevation="@dimen/_5sdp"
        android:id="@+id/profile_edit_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/profile_edit_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:focusableInTouchMode="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:id="@+id/help_name_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/enter_name"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:id="@+id/help_name_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/help_name_rel"
                android:id="@+id/help_mobile_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLength="10"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/enter_contact_number"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:id="@+id/help_mobile_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/help_mobile_rel"
                android:id="@+id/help_email_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/email_address"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:id="@+id/help_email_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:layout_below="@+id/help_email_rel"
                android:id="@+id/help_message_rel"
                android:background="@drawable/gray_border_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:minLines="6"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/enter_message"
                    android:gravity="top"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:id="@+id/help_message_et"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <Button

                android:text="@string/submit"
                android:id="@+id/help_submit"
                android:textAllCaps="false"
                android:background="@drawable/btn_yellow"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_below="@+id/help_message_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>