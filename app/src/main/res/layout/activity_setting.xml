<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Setting">

    <android.support.v7.widget.Toolbar
        android:background="@color/white"
        android:elevation="@dimen/_5sdp"
        android:id="@+id/profile_edit_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/profile_edit_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/_12sdp"
                android:hint="@string/change_password"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/v1"
                android:layout_below="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_below="@+id/v1"
                android:textSize="@dimen/_12sdp"
                android:hint="@string/change_preferred_categories"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/change_pre_cat"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/v2"
                android:layout_below="@+id/change_pre_cat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>